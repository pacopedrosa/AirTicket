#Imagen de partida
FROM php:8.2-fpm
# Instalar dependencias necesarias
RUN apt-get update && apt-get install -y \
 git unzip libpq-dev && docker-php-ext-install pdo pdo_mysql
# Instalar Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer
WORKDIR /app
# Copiar el código fuente
COPY . .
# Instalar dependencias de Symfony
RUN composer install --no-scripts --no-interaction --no-dev --optimize-autoloader
# RUN composer update

# Crear directorio de la aplicación y establecer permisos
RUN chown -R www-data:www-data /app

# Asegurarse de que los directorios de caché y logs son escribibles
RUN mkdir -p /app/var/cache /app/var/log \
    && chown -R www-data:www-data /app/var/cache /app/var/log \
    && chmod -R 777 /app/var/cache /app/var/log

EXPOSE 8000
# Comando de inicio
CMD ["php", "-S", "0.0.0.0:8000", "-t", "public"]
